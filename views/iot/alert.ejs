<% layout('layouts/boilerplate') %>

<div class="m-8">
  <% data.forEach(item => { %>
    <% if (item.distance < 0) { %>
      <!-- Info Alert -->
      <div id="alert-additional-content-1" class="max-w-2xl p-4 mb-4 mx-auto text-blue-800 border border-blue-300 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400 dark:border-blue-800" role="alert">
        <div class="flex items-center mb-3">
          <svg class="flex-shrink-0 w-5 h-5 mr-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
          </svg>
          <h3 class="text-lg font-semibold">Info Alert</h3>
        </div>
        <div class="grid grid-cols-2 gap-4 text-sm mb-4">
          <div>
            <h3 class="text-base font-medium">Temperature: <%= item.tempC %>°C</h3>
          </div>
          <div>
            <h3 class="text-base font-medium">Water Level: <%= item.distance %> cm</h3>
          </div>
          <div>
            <h3 class="text-base font-medium">Humidity: <%= item.humidity %>%</h3>
          </div>
          <div>
            <h3 class="text-base font-medium">Rain Status: <%= item.rainOutput %></h3>
          </div>
        </div>
        <div class="text-sm text-right">
          <%= new Date(item.time).toLocaleString() %>
        </div>
      </div>
    <% } else { %>
      <!-- Danger Alert -->
      <div id="alert-additional-content-2" class="max-w-2xl p-4 mb-4 mx-auto text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
        <div class="flex items-center mb-3">
          <svg class="flex-shrink-0 w-5 h-5 mr-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
          </svg>
          <h3 class="text-lg font-medium">Danger Alert</h3>
        </div>
        <div class="grid grid-cols-2 gap-4 text-sm mb-4">
          <div>
            <h3 class="text-base font-medium">Temperature: <%= item.tempC %>°C</h3>
          </div>
          <div>
            <h3 class="text-base font-medium">Water Level: <%= item.distance %> cm</h3>
          </div>
          <div>
            <h3 class="text-base font-medium">Humidity: <%= item.humidity %>%</h3>
          </div>
          <div>
            <h3 class="text-base font-medium">Rain Status: <%= item.rainOutput %></h3>
          </div>
        </div>
        <div class="text-sm text-right">
          <%= new Date(item.time).toLocaleString() %>
        </div>
      </div>
    <% } %>
  <% }); %>
</div>
